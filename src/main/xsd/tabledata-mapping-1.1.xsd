<?xml version="1.0"?>
<xs:schema version="1.0" elementFormDefault="qualified"
  targetNamespace="http://www.sitoolkit.org/schema/tabledata-mapping/1.1" xmlns:xs="http://www.w3.org/2001/XMLSchema"
